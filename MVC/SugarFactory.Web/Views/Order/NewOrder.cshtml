@model SugarFactory.Models.ViewModels.Orders.NewOrderFromExistingSachetViewModel
@{
    ViewBag.Title = "NewOrder";
}
<br />
<h2>New Order</h2>

@Html.Label("Client Prefix:")
@Html.TextBox("ClientPrefix", @Model.ClientPrefix, new { @class = "form-control", @readonly = "readonly" })
<br />
@Html.Label("Sachet Unique Number:")
@Html.TextBox("SachetUniqueNumber", @Model.UniqueNumber, new { @class = "form-control", @readonly = "readonly" })

<br/>
@Html.LabelFor(vm => vm.ImageUrl):
<img src="~/UploadedFiles/@Url.Content(Model.ImageUrl)" width="200" height="250" alt="some img"> 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Paper Kg:")
        @Html.TextBox("PaperKg", @Model.PaperKg, new { @class = "form-control"})
        @Html.ValidationMessageFor(model => model.PaperKg, "", new { @class = "text-danger" })
    </div>
  

    <input type="submit" value="Send Order" class="btn btn-lg btn-success" />
    <input type="number" value="@Model.Id" hidden="hidden" name="Id" />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}